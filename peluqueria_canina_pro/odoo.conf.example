[options]
# Configuración de Base de Datos
db_host = localhost
db_port = 5432
db_user = odoo
db_password = CAMBIAR_ESTO
db_name = peluqueria_db
db_maxconn = 64

# Seguridad
admin_passwd = CAMBIAR_PASSWORD_ADMIN
list_db = False

# Rutas
addons_path = /opt/odoo/addons,/opt/odoo/custom/addons/peluqueria_canina,/opt/odoo/custom/addons/peluqueria_canina_pro
data_dir = /var/lib/odoo

# Servidor
http_port = 8069
http_interface = 0.0.0.0
proxy_mode = True

# Workers (para producción)
workers = 2
max_cron_threads = 1

# Límites
limit_time_cpu = 60
limit_time_real = 120
limit_memory_hard = 2684354560
limit_memory_soft = 2147483648
limit_request = 8192

# Logs
logfile = /var/log/odoo/odoo.log
log_level = info
log_handler = :INFO

# Sesiones
session_timeout = 86400
