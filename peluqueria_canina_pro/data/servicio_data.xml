<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Secuencia para visitas -->
        <record id="seq_peluqueria_visita" model="ir.sequence">
            <field name="name">Visitas Peluquería</field>
            <field name="code">peluqueria.visita</field>
            <field name="prefix">VIS</field>
            <field name="padding">5</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>

        <!-- Servicios de ejemplo -->
        <record id="servicio_bano_completo" model="peluqueria.servicio">
            <field name="name">Baño Completo</field>
            <field name="code">BANO</field>
            <field name="categoria">bano</field>
            <field name="precio">2500</field>
            <field name="costo_estimado">300</field>
            <field name="duracion">1.0</field>
            <field name="sequence">10</field>
            <field name="description">Baño completo con shampoo, acondicionador y secado</field>
        </record>

        <record id="servicio_corte_pelo" model="peluqueria.servicio">
            <field name="name">Corte de Pelo</field>
            <field name="code">CORTE</field>
            <field name="categoria">corte</field>
            <field name="precio">1800</field>
            <field name="costo_estimado">150</field>
            <field name="duracion">0.75</field>
            <field name="sequence">20</field>
            <field name="description">Corte de pelo según raza y preferencias</field>
        </record>

        <record id="servicio_deslanado" model="peluqueria.servicio">
            <field name="name">Deslanado</field>
            <field name="code">DESLAN</field>
            <field name="categoria">estetica</field>
            <field name="precio">2000</field>
            <field name="costo_estimado">200</field>
            <field name="duracion">1.5</field>
            <field name="sequence">30</field>
            <field name="description">Eliminación de pelo muerto y subpelo</field>
        </record>

        <record id="servicio_corte_unas" model="peluqueria.servicio">
            <field name="name">Corte de Uñas</field>
            <field name="code">UNAS</field>
            <field name="categoria">higiene</field>
            <field name="precio">500</field>
            <field name="costo_estimado">50</field>
            <field name="duracion">0.25</field>
            <field name="sequence">40</field>
            <field name="description">Corte y limado de uñas</field>
        </record>

        <record id="servicio_limpieza_oidos" model="peluqueria.servicio">
            <field name="name">Limpieza de Oídos</field>
            <field name="code">OIDOS</field>
            <field name="categoria">higiene</field>
            <field name="precio">400</field>
            <field name="costo_estimado">80</field>
            <field name="duracion">0.25</field>
            <field name="sequence">50</field>
            <field name="description">Limpieza profunda de oídos</field>
        </record>

        <record id="servicio_bano_medicado" model="peluqueria.servicio">
            <field name="name">Baño Medicado</field>
            <field name="code">BANO_MED</field>
            <field name="categoria">especial</field>
            <field name="precio">3500</field>
            <field name="costo_estimado">800</field>
            <field name="duracion">1.5</field>
            <field name="sequence">60</field>
            <field name="description">Baño con productos medicados especiales</field>
        </record>

    </data>
</odoo>
